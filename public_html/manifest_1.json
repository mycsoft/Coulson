{
    "name": "HelloWorld",
    "version": "1.1.0",
    "manifest_version": 2,
    "description": "Hello World!",
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "HelloWorld",
        "default_popup": "popup.html"
    },
    "page_action": {
          "default_icon": {
               "19": "icon.png"
          },
          "default_title": "cnblogs.com article information"
     },
    "permissions": [
        "activeTab",
        "*://b.easyxue.cn/*",
        "tabs"
    ]

}
